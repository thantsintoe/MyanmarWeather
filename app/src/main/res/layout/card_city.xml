<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card-view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_station"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    card-view:cardCornerRadius="10dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mawlamyine_bg_sm"
        android:orientation="vertical">


        <TextView
            android:id="@+id/city_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Yangon"
            android:textColor="#ffffff"
            android:textSize="20dp"
            card-view:layout_constraintBottom_toBottomOf="parent"
            card-view:layout_constraintHorizontal_bias="0.0"
            card-view:layout_constraintLeft_toLeftOf="parent"
            card-view:layout_constraintRight_toRightOf="parent"
            card-view:layout_constraintTop_toTopOf="parent"
            card-view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/currentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="20th December"
            android:textColor="#fff"
            android:textSize="12sp"
            card-view:layout_constraintLeft_toLeftOf="parent"
            card-view:layout_constraintTop_toBottomOf="@+id/city_name" />

        <TextView
            android:id="@+id/current_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="20 Â°C"
            android:textColor="#fff"
            android:textSize="38sp"
            android:typeface="normal"
            card-view:layout_constraintBottom_toBottomOf="parent"
            card-view:layout_constraintLeft_toLeftOf="parent"
            card-view:layout_constraintTop_toBottomOf="@+id/currentDate" />

        <TextView
            android:id="@+id/weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Partly Cloudy"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            card-view:layout_constraintBottom_toBottomOf="parent"
            card-view:layout_constraintHorizontal_bias="0.856"
            card-view:layout_constraintLeft_toRightOf="@+id/current_temp"
            card-view:layout_constraintRight_toRightOf="parent"
            card-view:layout_constraintTop_toBottomOf="@+id/weatherIcon"
            card-view:layout_constraintVertical_bias="0.333" />

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            card-view:layout_constraintBottom_toBottomOf="parent"
            card-view:layout_constraintHorizontal_bias="0.958"
            card-view:layout_constraintRight_toRightOf="@+id/weather_description"
            card-view:layout_constraintTop_toTopOf="parent"
            card-view:layout_constraintVertical_bias="0.268"
            card-view:srcCompat="@drawable/cloudy" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>




