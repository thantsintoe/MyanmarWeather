<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card-view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_hourlyforecast"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card-view:cardCornerRadius="0dp"
    card-view:cardElevation="8dp">


    <LinearLayout
        android:id="@+id/forecast_card_BG"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/hourly_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#22000000"
            android:padding="10dp"
            android:text="၉ နာရီ"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            card-view:layout_constraintLeft_toLeftOf="parent"
            card-view:layout_constraintRight_toRightOf="parent"
            card-view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hourly_icon"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="13dp"
            card-view:layout_constraintLeft_toLeftOf="parent"
            card-view:layout_constraintRight_toRightOf="parent"
            card-view:layout_constraintTop_toBottomOf="@+id/hourly_date"
            card-view:srcCompat="@drawable/cloudy1" />

        <TextView
            android:id="@+id/hourly_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text=" 25 C"
            android:textColor="#ffffff"
            android:textSize="12sp"
            card-view:layout_constraintLeft_toLeftOf="parent"
            card-view:layout_constraintRight_toRightOf="parent"
            card-view:layout_constraintTop_toBottomOf="@+id/hourly_icon" />

        <TextView
            android:id="@+id/hourly_rainfall"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="14dp"
            android:text="30%"
            android:textColor="#ffffff"
            android:textSize="12sp"
            card-view:layout_constraintLeft_toLeftOf="parent"
            card-view:layout_constraintRight_toRightOf="parent"
            card-view:layout_constraintTop_toBottomOf="@+id/hourly_icon" />


    </LinearLayout>

</android.support.v7.widget.CardView>




